%section#discuss
  .message
    %h2 Message

    %ul.headers
      %li Subject: #{message.try(:subject)}
      %li Sender: #{message.sender}
      %li Date: #{message.created_at.to_date}
      - # Do we want recipient names to be links? or have any data attributes like the user.id?
      %li Recipients: #{recipients_string(message.recipient_list)}

    .body= message.body

  .compose.reply
    %h3 Reply
    = simple_form_for @message.children.new do |f|
      = f.input :subject, input_html: { value: "Re: #{@message.subject}" }
      = f.input :body, required: false, label: 'Your message'
      = f.input :draft, as: :boolean

      = f.submit 'Reply'
